<%- include('./includes/head') %>
<%- include('./includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Cadastrar contatos</h1>
     
          <p class="text-center lead">Cadastre ou edite seus contatos abaixo.</p>

          <%- include('includes/messages') %>

          <% if (contato._id) { %>
            <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
          <% } else { %>
            <form class="form-contato" action="/contato/register" method="POST">
          <% } %>
         
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group my-3">
              <label for="idName">Nome</label>
              <input value="<%= contato.name %>" type="text" id="idName" class="form-control" placeholder="Digite seu nome" name="name">
            </div>

            <div class="form-group my-3">
              <label for="idLastName">Sobrenome</label>
              <input value="<%= contato.lastname %>"  type="text" id="idLastName" class="form-control" placeholder="Digite seu sobrenome" name="lastname">
            </div>

            <div class="form-group my-3">
              <label for="idTel">Telefone</label>
              <input value="<%= contato.phone %>" type="tel" id="idTel" class="form-control" placeholder="Digite seu nÃºmero de telefone" name="phone">
            </div>

            <div class="form-group my-3">
              <label for="idName">Email</label>
              <input value="<%= contato.email %>" type="email" id="idEmail" class="form-control" placeholder="Digite seu email" name="email">
            </div>
            <% if (contato._id) { %>
              <button type="submit" class="btn btn-primary">Editar contato</button>
            <%  } else { %>
              <button type="submit" class="btn btn-primary">Cadastrar contato</button>
            <% } %>
          </form>

      
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('./includes/footer') %>  
