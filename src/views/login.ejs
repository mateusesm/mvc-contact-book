<%- include('./includes/head') %>
<%- include('./includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login</h1>
          <p class="text-center lead">Crie sua conta ou faça login abaixo</p>

          <%- include('./includes/messages') %>

          <div class="row">

            <div class="col-lg">
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>

              <form class="form-register" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group my-3">
                  <label for="idEmail">Email</label>
                  <input type="email" class="form-control" id="idEmail" placeholder="Digite seu email" name="email">
                </div>
                <div class="form-group my-3">
                  <label for="idPassword">Senha</label>
                  <input type="password" class="form-control" id="idPassword" placeholder="Digite sua senha" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar conta</button>
              </form>

            </div>

            <div class="col-lg">
              <h4>Entrar no sistema</h4>
              <p>Se você já tem uma conta, faça login preenchendo os campos abaixo:</p>
              
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group my-3">
                  <label for="idEmail">Email</label>
                  <input type="email" class="form-control" id="idEmail" placeholder="Digite seu email" name="email">
                </div>
                <div class="form-group my-3">
                  <label for="idPassword">Senha</label>
                  <input type="password" class="form-control" id="idPassword" placeholder="Digite sua senha" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>

          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('./includes/footer') %>  
